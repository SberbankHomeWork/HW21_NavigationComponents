<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment1">

    <fragment
        android:id="@+id/fragment1"
        android:name="com.alextroy.android.hw21_navigation.fragments.Fragment1"
        android:label="fragment_fragment1"
        tools:layout="@layout/fragment">
        <action
            android:id="@+id/action_fragment1_to_fragment2"
            app:destination="@id/fragment2" />
    </fragment>

    <fragment
        android:id="@+id/fragment2"
        android:name="com.alextroy.android.hw21_navigation.fragments.Fragment2"
        android:label="fragment_fragment2"
        tools:layout="@layout/fragment">
        <action
            android:id="@+id/action_fragment2_to_fragment3"
            app:destination="@id/fragment3" />
    </fragment>

    <fragment
        android:id="@+id/fragment3"
        android:name="com.alextroy.android.hw21_navigation.fragments.Fragment3"
        android:label="fragment_fragment3"
        tools:layout="@layout/fragment">
        <action
            android:id="@+id/action_fragment3_to_fragment1"
            app:destination="@id/fragment1" />
    </fragment>

    <fragment
        android:id="@+id/fragment4"
        android:name="com.alextroy.android.hw21_navigation.fragments.Fragment4"
        android:label="fragment_fragment4"
        tools:layout="@layout/view_pager_fragment" />

</navigation>